<?php
declare(strict_types = 1);

use Halsey\Journal\{
    Config,
    Menu\Entry,
};
use Innmind\Url\{
    Url,
    Path,
};

return static function(Config $config): Config
{
    return $config
        ->package('halsey', 'journal', 'halsey-php')
        ->locatedAt(Path::of('example/'))
        ->menu(
            Entry::externalLink(
                'Some external link',
                Url::of('https://github.com/halsey-php'),
                Entry::markdown(
                    'Index',
                    Path::of('readme.md'),
                ),
                Entry::externalLink(
                    'Sub menu 2',
                    Url::of('https://github.com/halsey-php'),
                ),
            ),
            Entry::section(
                'Some section',
                Entry::markdown(
                    'Nested markdown',
                    Path::of('sub/readme.md'),
                ),
            )->alwaysOpen(),
            Entry::externalLink(
                'Some external link 2',
                Url::of('https://github.com/halsey-php'),
            ),
        );
};
